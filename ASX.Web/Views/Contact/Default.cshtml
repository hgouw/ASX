@model ASX.Web.Models.ContactModel
@{
    ViewBag.Title = "Contact Me";
}

<h2>Contact Me</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table style="width: 90%;">
        <tr>
            <td>@Html.LabelFor(model => model.Name, "Name")</td>
        </tr>
        <tr>
            <td>@Html.EditorFor(model => model.Name, new { htmlAttributes = new { style = "width:400px; margin-bottom:10px" } })</td>
            <td>@Html.ValidationMessageFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Email, "Email")</td>
        </tr>
        <tr>
            <td>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { style = "width:400px; margin-bottom:10px" } })</td>
            <td>@Html.ValidationMessageFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Phone, "Phone")</td>
        </tr>
        <tr>
            <td>@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { style = "width:400px; margin-bottom:10px" } })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Message, "Message")</td>
        </tr>
        <tr>
            <td>@Html.TextAreaFor(model => model.Message, new { style = "width:400px; height:150px; margin-bottom:10px" })</td>
            <td>@Html.ValidationMessageFor(model => model.Message)</td>
        </tr>
        <tr>
            <td>
                @Html.ReCaptcha()
                @if (TempData["ReCaptchaError"] != null)
                {
                    <p>@TempData["ReCaptchaError"]</p>
                }
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Submit" />
    </p>
}
